generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sex {
  MACHO
  FEMEA
}

model Pet {
  id     String @id @default(uuid())
  color  String
  sex    Sex
  age    Int
  specie String
  size   String
  race   String
  org    Org    @relation(fields: [orgId], references: [id])
  orgId  String
}

model Org {
  id            String @id @default(uuid())
  name          String
  email         String
  password_hash String
  phone         String
  address       String
  city          String
  Pet           Pet[]
}
